<%
  # use a database with the same name as the branch, if the branch is not master:
  db_name = 'crabgrass'
  branch = `git branch`.split("\n").grep(/^\*/).first.try.sub('*','').strip
  if branch != 'master'
    db_name = branch
  end
%>

development:
  encoding: utf8
  adapter: mysql
  database: <%=db_name%>_development
  username: root
  password: 
  host: localhost

